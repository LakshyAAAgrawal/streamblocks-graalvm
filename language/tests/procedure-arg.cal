namespace test:
    actor test () ==> :
        state := 0;

        procedure StateChange (X) begin
            state := X;
        end

        action ==>
        guard state = 0
        do
                StateChange(1);
                println(0);
        end

        action ==>
        guard state = 1
        do
                StateChange(2);
                println(1);
        end

        action ==>
        guard state = 2
        do
                StateChange(0);
                println(2);
        end
    end
end

